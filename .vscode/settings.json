{
    "code-runner.executorMap": {
        "cpp": "g++ -o $fileNameWithoutExtension $fileName && $fileNameWithoutExtension"
    },
    "code-runner.runInTerminal": true,
    "terminal.integrated.env.windows": {
        "PATH": "C:/MinGW/bin:${env:PATH}"  // Ensure MinGW (or your compiler) is in the PATH
    },
    "files.associations": {
        "*.cpp": "cpp",
        "*.h": "cpp"
    }
}
